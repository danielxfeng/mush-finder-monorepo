{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "p_hash": {
      "description": "Perceptual hash (64-hex) of the image",
      "type": "string",
      "minLength": 64,
      "maxLength": 64,
      "pattern": "^[A-Fa-f0-9]{64}$"
    },
    "img_url": {
      "description": "URL of the image",
      "type": "string",
      "format": "uri"
    },
    "status": {
      "type": "string",
      "enum": [
        "queued",
        "processing",
        "done",
        "error",
        "not_found"
      ]
    },
    "result": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "category": {
            "description": "The category of the task",
            "type": "string"
          },
          "confidence": {
            "description": "Confidence level of the task result",
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        "required": [
          "category",
          "confidence"
        ],
        "additionalProperties": false
      }
    },
    "processed_at": {
      "description": "Timestamp when the task was processed",
      "type": "integer",
      "minimum": 0,
      "maximum": 9007199254740991
    },
    "retry_count": {
      "description": "Number of times the task has been retried",
      "type": "integer",
      "minimum": 0,
      "maximum": 9007199254740991
    }
  },
  "required": [
    "p_hash",
    "img_url",
    "status",
    "result",
    "processed_at",
    "retry_count"
  ],
  "additionalProperties": false
}